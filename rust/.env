# Database Configuration
DATABASE_URL=postgres://user:pass@host/db

# SMTP Configuration (using different port to avoid conflict)
SMTP_RECEIVE_PORT=25

# Heartbeat Monitoring (BetterStack Uptime)
HEARTBEAT_URL=https://uptime.betterstack.com/api/v1/heartbeat/id # no url = no heartbeat

# Supabase connection for main.rs
SUPABASE_URL=https://projectid.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Self-hosting toggles (set to false to use only PostgreSQL)
USE_SUPABASE_BANS=true # Set to false to disable Supabase bans (uses only PostgreSQL)
USE_SUPABASE_DOMAINS=true # Set to false to disable Supabase domains (accepts all domains)